<Page x:Class="FUNERALMVVM.View.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FUNERALMVVM.View.Pages" xmlns:viewmodel="clr-namespace:FUNERALMVVM.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:UsersController}"
      mc:Ignorable="d" 
      d:DesignHeight="857" d:DesignWidth="1219"
      Title="MainPage">
    <Page.Resources>
        <Style TargetType="Button" x:Key="TypeButton">
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Background" Value="#FF92ADCB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Width" Value="194"/>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid Margin="0,0,0,571">
            <Label Content="Авторизованный сотрудник:" HorizontalAlignment="Left" Margin="82,65,0,0" VerticalAlignment="Top" FontSize="24" Foreground="#FFA1A1A1"/>
            <Label Content="Роль:" HorizontalAlignment="Left" Margin="82,112,0,0" VerticalAlignment="Top" FontSize="24" Foreground="#FFA1A1A1"/>
            <Label Content="{Binding Role}" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="24" Foreground="#FFA1A1A1" Margin="423,112,0,0"/>
            <Label Content="{Binding UserName}" HorizontalAlignment="Left" Margin="423,65,0,0" VerticalAlignment="Top" FontSize="24" Foreground="#FFA1A1A1"/>

            <Button Command="{Binding SendCommand}" Content="Сформировать отчёт" 
                Style="{StaticResource TypeButton}" Margin="127,227,0,14" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="158">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Command="{Binding GetCommand}" Content="Загрузить отчёт" 
                Margin="310,227,0,14" 
                Style="{StaticResource TypeButton}" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="158">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>

            </Button>
        </Grid>

        <Grid Margin="0,291,0,0">
            <DataGrid ItemsSource="{Binding BossTable}" AutoGenerateColumns="False" IsSynchronizedWithCurrentItem="False" SelectionMode="Single" SelectionUnit="Cell" CanUserAddRows="False" RowDetailsVisibilityMode="Visible"
                  Margin="127,22,127,53">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Path='ManagerName'}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding Path='StartWorkTime'}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding Path='EndWorkTime'}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="ZakupPrice" Binding="{Binding Path='Salary'}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="OForm" Binding="{Binding Path='Money'}" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

    </Grid>
</Page>
