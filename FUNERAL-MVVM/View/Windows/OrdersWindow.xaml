        <TextBox HorizontalAlignment="Left" Margin="524,340,0,0" TextWrapping="Wrap" Text="{Binding GruntCount}" VerticalAlignment="Top" Width="50"/>
        <TextBox HorizontalAlignment="Left" Margin="525,376,0,0" TextWrapping="Wrap" Text="{Binding GranitCount}" VerticalAlignment="Top" Width="50"/>

