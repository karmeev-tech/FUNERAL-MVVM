        <TextBox HorizontalAlignment="Left" Margin="594,314,0,0" TextWrapping="Wrap" Text="{Binding s11}" VerticalAlignment="Top" Width="111" IsReadOnly="True"/>
        <TextBox HorizontalAlignment="Left" Margin="594,340,0,0" TextWrapping="Wrap" Text="{Binding s12}" VerticalAlignment="Top" Width="111" IsReadOnly="True"/>
