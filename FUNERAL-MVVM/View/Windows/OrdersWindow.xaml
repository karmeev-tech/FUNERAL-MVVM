        </ComboBox>
        <ComboBox Text="{Binding Fences}" HorizontalAlignment="Left" Margin="26,210,0,0" VerticalAlignment="Top" Width="120" Height="21">
            <ComboBoxItem Content="Установка"/>
            <ComboBoxItem Content="Демонтаж"/>
            <ComboBoxItem Content="Установка и демонтаж"/>
        </ComboBox>
        <ComboBox Text="{Binding Tables}" HorizontalAlignment="Left" Margin="26,236,0,0" VerticalAlignment="Top" Width="120" Height="22">
            <ComboBoxItem Content="Установка"/>
            <ComboBoxItem Content="Демонтаж"/>
