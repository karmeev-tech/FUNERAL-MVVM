        <TextBox HorizontalAlignment="Left" Margin="594,132,0,0" TextWrapping="Wrap" Text="{Binding s4}" VerticalAlignment="Top" Width="111" IsReadOnly="True"/>
        <TextBox HorizontalAlignment="Left" Margin="594,158,0,0" TextWrapping="Wrap" Text="{Binding s5}" VerticalAlignment="Top" Width="111" IsReadOnly="True"/>
        <TextBox HorizontalAlignment="Left" Margin="594,184,0,0" TextWrapping="Wrap" Text="{Binding s6}" VerticalAlignment="Top" Width="111"/>
        <TextBox HorizontalAlignment="Left" Margin="594,210,0,0" TextWrapping="Wrap" Text="{Binding s7}" VerticalAlignment="Top" Width="111"/>
        <TextBox HorizontalAlignment="Left" Margin="594,236,0,0" TextWrapping="Wrap" Text="{Binding s8}" VerticalAlignment="Top" Width="111"/>
