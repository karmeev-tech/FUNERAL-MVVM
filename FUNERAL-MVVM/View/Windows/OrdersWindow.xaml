        </ComboBox>
        <ComboBox Text="{Binding Bord}" HorizontalAlignment="Left" Margin="91,128,0,0" VerticalAlignment="Top" Width="190" Height="22">
            <ComboBoxItem Content="тротуарный"/>
            <ComboBoxItem Content="гранитный"/>
