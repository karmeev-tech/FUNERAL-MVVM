            <ComboBoxItem Content="гранитная"/>
        </ComboBox>
        <ComboBox Text="{Binding Funeral}" HorizontalAlignment="Left" Margin="27,184,0,0" VerticalAlignment="Top" Width="120" Height="22">
            <ComboBoxItem Content="Установка"/>
            <ComboBoxItem Content="Демонтаж"/>
