        <ComboBox ItemsSource="{Binding Funerals}" Text="{Binding Funeral}" HorizontalAlignment="Left" Margin="213,290,0,0" VerticalAlignment="Top" Width="96" Height="30"/>
        <Label Content="Сечение" HorizontalAlignment="Left" Margin="314,290,0,0" VerticalAlignment="Top" FontSize="18" Foreground="#FFA1A1A1" Panel.ZIndex="1"/>
        <ComboBox ItemsSource="{Binding Funerals}" Text="{Binding Funeral}" HorizontalAlignment="Left" Margin="409,290,0,0" VerticalAlignment="Top" Width="112" Height="30"/>
        <Label Content="Подставка" HorizontalAlignment="Left" Margin="97,257,0,0" VerticalAlignment="Top" FontSize="18" Foreground="#FFA1A1A1" Panel.ZIndex="1"/>
        <Label Content="Размер" HorizontalAlignment="Left" Margin="100,387,0,0" VerticalAlignment="Top" FontSize="18" Foreground="#FFA1A1A1" Panel.ZIndex="1" Width="70"/>
        <ComboBox ItemsSource="{Binding Funerals}" Text="{Binding Funeral}" HorizontalAlignment="Left" Margin="213,388,0,0" VerticalAlignment="Top" Width="96" Height="30"/>
        <Label Content="Сечение" HorizontalAlignment="Left" Margin="314,388,0,0" VerticalAlignment="Top" FontSize="18" Foreground="#FFA1A1A1" Panel.ZIndex="1"/>
        <ComboBox ItemsSource="{Binding Funerals}" Text="{Binding Funeral}" HorizontalAlignment="Left" Margin="409,388,0,0" VerticalAlignment="Top" Width="112" Height="30"/>
        <Label Content="Цветник" HorizontalAlignment="Left" Margin="99,343,0,0" VerticalAlignment="Top" FontSize="18" Foreground="#FFA1A1A1" Panel.ZIndex="1"/>
        <CheckBox Content="Без цветника" HorizontalAlignment="Left" Margin="215,355,0,0" VerticalAlignment="Top"/>
        <Label Content="Полировка" HorizontalAlignment="Left" Margin="102,448,0,0" VerticalAlignment="Top" FontSize="18" Foreground="#FFA1A1A1" Panel.ZIndex="1" Width="113"/>
        <ComboBox ItemsSource="{Binding Funerals}" Text="{Binding Funeral}" HorizontalAlignment="Left" Margin="215,452,0,0" VerticalAlignment="Top" Width="195" Height="30"/>


    </Grid>
</Page>
