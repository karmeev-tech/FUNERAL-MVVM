        <ComboBox ItemsSource="{Binding Funerals}" Text="{Binding Funeral}" HorizontalAlignment="Left" Margin="417,132,0,0" VerticalAlignment="Top" Width="112" Height="30"/>
        <Label Content="Размер" HorizontalAlignment="Left" Margin="100,210,0,0" VerticalAlignment="Top" FontSize="18" Foreground="#FFA1A1A1" Panel.ZIndex="1" Width="70"/>
        <ComboBox ItemsSource="{Binding Funerals}" Text="{Binding Funeral}" HorizontalAlignment="Left" Margin="211,218,0,0" VerticalAlignment="Top" Width="96" Height="30"/>
        <Label Content="Сечение" HorizontalAlignment="Left" Margin="314,218,0,0" VerticalAlignment="Top" FontSize="18" Foreground="#FFA1A1A1" Panel.ZIndex="1"/>
        <ComboBox ItemsSource="{Binding Funerals}" Text="{Binding Funeral}" HorizontalAlignment="Left" Margin="409,218,0,0" VerticalAlignment="Top" Width="112" Height="30"/>
        <Label Content="Стела" HorizontalAlignment="Left" Margin="100,180,0,0" VerticalAlignment="Top" FontSize="18" Foreground="#FFA1A1A1" Panel.ZIndex="1"/>
