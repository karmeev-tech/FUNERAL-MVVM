        <Label Content="Прочее оформление" HorizontalAlignment="Left" Margin="576,174,0,0" VerticalAlignment="Top" FontSize="18" Foreground="#FFA1A1A1" Panel.ZIndex="1"/>
        <TextBox HorizontalAlignment="Left" Margin="876,180,0,0" TextWrapping="Wrap" Text="{Binding OtherDesign}" VerticalAlignment="Top" Width="226" Height="28" Panel.ZIndex="1"/>
        <Label Content="Модель №" HorizontalAlignment="Left" Margin="102,131,0,0" VerticalAlignment="Top" FontSize="18" Foreground="#FFA1A1A1" Panel.ZIndex="1"/>
        <ComboBox ItemsSource="{Binding Funerals}" Text="{Binding Funeral}" HorizontalAlignment="Left" Margin="215,132,0,0" VerticalAlignment="Top" Width="96" Height="30"/>
