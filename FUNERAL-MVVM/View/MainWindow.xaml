<Window x:Class="FUNERAL_MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" GotMouseCapture="Page_GotMouseCapture" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox Text="{Binding Name}" HorizontalAlignment="Left" Margin="333,173,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Text="{Binding Password}" HorizontalAlignment="Left" Margin="333,207,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Auth" Command="{Binding AuthCommand}" HorizontalAlignment="Left" Margin="366,242,0,0" VerticalAlignment="Top" Width="54"/>
        <Label Content="{Binding Response}" HorizontalAlignment="Left" Margin="374,267,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
